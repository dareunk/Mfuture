<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible"  content="IE=edge">
        <meta name="viewport" content="with=device-width, initial-scale=1.0">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap" rel="stylesheet">
        <style>
            body{
                background-color: #1E1E1E;
            }
            #logo img{
            margin-left:20px;
            width:50px;
            height:50px;
            float:left;
        }
        #logo p{
            padding-top:10px;
            padding-left:10px;
            color:white;
            font-size:150%;
        }
            #container{
                width:100%;
                height:100%;
                margin-top:15%;
            }
            #profileDiv{
                width:300px;
                height:300px;
                border-radius: 50%;
                background-color:white;
                cursor:pointer;
                margin-left:20%;
                text-align: center;
                color:gray;
                position:relative;
                float:left;
		
            
            }
     
	    #profileDiv img{
		    width:300px;
		    height:300px;
		    margin-left:0px;
		    position:absolute;
		    border-radius:50%;
		    object-fit : cover;
		    left:0px;
	    }
           
        #inputInfo, #inputemailDiv, #codeDiv{
                text-align: right;
                margin-right:20%;
		margin-top:5px;
            }
            #inputInfo div{
                margin-top:5px;
            }
            label{
                color:white;
                font-size:150%;
                padding-right:50px;
            }
         
            #firstName, #lastName, #code, #inputemail, #phone, #password, #re-password{
                width:300px;
                height:40px;
                border-radius: 100px;
            }
            #submit{
                width:100px;
                height:40px;
                border-radius:100px;
                margin-top:30px;

            }
	    #error p, #auth p{ 
	    	color:red;
		text-align:right;
		margin-right:20%;
	    }
     
  	    #getCode, #confirm{
		    width:100px;
		    height:40px;
		    border-radius:100px;
		    background-color:#C32B2B;
		    margin-top:-40px;
	            float:right;
		    margin-right:10%;
            color:white;
	    }


        </style>
	 <script src="http://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script>
		$(document).ready(function() {
			let authentication = $("#authentication").val();
			if(authentication == "true"){
		//	let email = req.session.inputEmail;
			$("#inputemail").prop("value", "The validation of your email successed");
		//	$("#inputemail").prop("value","test");
			$("#inputemail").prop("readOnly",true);
			//$("#code").prop("readOnly", true);
			$("#code").prop("value", "authentication completed");
			$("#code").prop("readOnly", true);
			}
		});
	</script>
	</head>
    <body>
        <div id ="logo">
            <img src="/image/logo.png" alt="logo">
            <p>SIGN UP</p>
        </div>
	    <div id="container">
		    <input type="hidden" name="authentication" id="authentication" value="<%= authentication %>">
	    <div id="error">
		    <% if(flashMessages){ %>
		    <% if(flashMessages.error){ %>
		    <p><%= flashMessages.error %></p> 
		    <% }} %>

	    </div>
	   <!--
	    <div id="profileDiv">
	    <label for="profile" id="profile">
		    <p> upload profile</p>
	    </label>
	    <input type="file" name="profile" id="profile"></input>
	    </div>
	    -->
	    <div id="profileDiv">
		    <img src="<%= profilepath %>" alt ="no search image">
	    </div>
		<form method="POST">
			<div id="inputemailDiv">
			<label for="inputemail">Email</label>
			<input type="email" name="inputemail" id="inputemail">
			</div>
		
			<input type="submit" name="getCode" id="getCode" value="send code" onclick="javascript:form.action='/sendCode';"/>
		
			<div id="codeDiv">
			<label for="code">Code</label>
			<input type="text" name="code" id="code">
			</div>
			<input type="submit" name="confirm" id="confirm" value="confirm" onclick="javascript:form.action='/confirm';"/>
			
			
			 
			<div id="auth">
				<% if(flashMessages.match) { %><p> <%= flashMessages.match %></p> <% }; %>
			</div>
		
												         	    
            <div id="inputInfo">
            <div>
            <label for="firstName">firstName</label>
            <input type="text" name="firstName" id="firstName">
            </div>
	    <div>
            <label for="lastName">lastName</label>
            <input type="text" name="lastName" id="lastName">
	    </div>
	    <div>
            <label for="phone">Phone</label>
            <input type="text" name="phone" id="phone">
            </div>
            <div>
            <label for="password">Password</label>
            <input type="password" name="password" id="password">
            </div>
            <div id="submitDiv">
            <input type="submit" name="submit" id="submit" value="send" onclick="javascript:form.action='/signup';" />
            </div>
	    </div>
            </form>
            </div>
    </body>
</html>


